{
  "name": "@google/jules-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Google Jules API with scheduling capabilities",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "jules-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "mcp:smoke": "npm run build && node scripts/mcp-smoke.mjs"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "jules",
    "google",
    "coding-agent",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "dotenv": "^17.2.3",
    "node-schedule": "^2.1.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/node-schedule": "^2.1.7",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
